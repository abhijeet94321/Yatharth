/**
 * @fileOverview Firestore Security Rules for the Yatharth application.
 *
 * Core Philosophy:
 * This ruleset enforces a strict user-ownership model. Each user can only access their own data, with the exception of admins who have broader read access.
 *
 * Data Structure:
 * - /users/{userId}: Stores user profiles.
 * - /users/{userId}/meditationSessions/{sessionId}: Stores meditation sessions.
 * - /users/{userId}/dailyMeditationSummaries/{summaryId}: Stores daily summaries.
 *
 * Key Security Decisions:
 * - Normal users cannot list all user profiles. Only admins can.
 * - All write operations require authentication and ownership validation.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Protects the `/users` collection. Admins can list all users. Regular users can only read/write their own profile.
     * @path /users/{userId}
     */
    match /users/{userId} {
      allow get: if isOwner(userId) || hasAdminRole();
      allow list: if hasAdminRole();
      allow create: if isOwner(userId) && request.resource.data.id == userId;
      allow update: if isOwner(userId) && request.resource.data.id == resource.data.id;
      allow delete: if isOwner(userId);
    }

    /**
     * @description Protects the /users/{userId}/meditationSessions/{sessionId} subcollection.
     * @path /users/{userId}/meditationSessions/{sessionId}
     */
    match /users/{userId}/meditationSessions/{sessionId} {
      allow read: if isOwner(userId) || hasAdminRole();
      allow write: if isOwner(userId);
    }

    /**
     * @description Protects the /users/{userId}/dailyMeditationSummaries/{summaryId} subcollection.
     * @path /users/{userId}/dailyMeditationSummaries/{summaryId}
     */
    match /users/{userId}/dailyMeditationSummaries/{summaryId} {
      allow read: if isOwner(userId) || hasAdminRole();
      allow write: if isOwner(userId);
    }

    // --- Helper functions ---

    /**
     * @description Checks if the user is signed in.
     */
    function isSignedIn() {
      return request.auth != null;
    }

    /**
     * @description Checks if the authenticated user ID matches the provided user ID.
     */
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    /**
     * @description Checks if the authenticated user has the 'admin' role in their user profile.
     */
    function hasAdminRole() {
      return isSignedIn() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
  }
}
